<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView"
        android:layout_below="@+id/button_lecRoom"
        android:layout_alignParentEnd="true"
        android:visibility="gone"
        android:layout_marginTop="48dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="@android:dimen/app_icon_size"
        android:text="LectureRoom comfirmation"
        android:id="@+id/button_lecRoom"
        android:background="#ed82e877"
        android:textSize="16dp"
        android:onClick="onButtonLectureRoom"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/Camera_Button"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="@android:dimen/app_icon_size"
        android:text="Camera"
        android:id="@+id/Camera_Button"
        android:background="#ed82e877"
        android:textSize="16dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/listView"
        android:nestedScrollingEnabled="false" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:id="@+id/login_button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:id="@+id/register_button"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/Camera_Button" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="@android:dimen/app_icon_size"
        android:text="Acess Cloud Storage"
        android:id="@+id/button3"
        android:background="#ed82e877"
        android:textSize="16dp"
        android:onClick="onButtonLectureRoom"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/button_lecRoom"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
